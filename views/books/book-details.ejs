            <div class="content-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-xl-3">
                                            <!-- Tab panes -->
                                            <div class="tab-content">
                                                <div role="tabpanel" class="tab-pane fade show active" id="first">
                                                    <img class="img-fluid" src="/upload/<%= item.cover %>" alt="" />
                                                </div>
                                                <div role="tabpanel" class="tab-pane fade" id="second">
                                                    <img class="img-fluid" src="/images/product/Book-cover-page-7-CRC.png" alt="" />
                                                </div>
                                                <div role="tabpanel" class="tab-pane fade" id="third">
                                                    <img class="img-fluid" src="/images/product/Free-Toddlers-Story-Book-Cover-Template.jpeg" alt="" />
                                                </div>
                                                <div role="tabpanel" class="tab-pane fade" id="for">
                                                    <img class="img-fluid" src="/images/product/Book-cover-page-7-CRC.png" alt="" />
                                                </div>
                                            </div>
                                            <!-- <div class="tab-slide-content new-arrival-product mb-4 mb-xl-0">
                                                <ul class="nav slide-item-list mt-3" role="tablist">
